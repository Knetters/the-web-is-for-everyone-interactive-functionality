<%- include('./partials/head') %>

<aside>
    <%- include('./partials/sidebar') %>
</aside>

<main class="teamInfo">
    <%- include('./partials/mobileMessage') %>
    <div class="container">
        <section class="panel-grid">
            <div class="team-grid">
                <div class="header-panel">
                    <header>
                        <div class="main-title-block">
                            <h1>Team information</h1>
                            <p class="title-block-p">Select a player to view and edit information.</p>
                        </div>
                    </header>
                </div>
                <div class="panel info-panel">
                    <section class="player-form-container">
                        <div class="player-form-post-continer">
                            <p class="question">Dit is een vraag voor een speler van een interview.</p>
                            <p class="awnser">Dit is een antwoord van een speler.</p>
                        </div>
                        <div class="player-form-input-container">
                            
                            <form action="/teamInfo" method="post" name="newPlayer" class="player-form">
                                <div class="inner-form">
                                    <label for="name">Name</label>
                                <input type="text" name="name" placeholder="..." value="<%= locals.values?.name ?? '' %>"/>
                              
                                <label for="name">gender</label>
                                <input type="text" name="gender" placeholder="..." />
                              
                                <label for="name">jerseyNumber</label>
                                <input type="number" name="jerseyNumber" placeholder="..." />
                              
                                <label for="name">Team</label>
                                <input type="text" name="team" placeholder="..." />
                              
                                <label>Questions</label>
                                <select name="question">
                                    <option disabled selected>--- Select ---</option>
                                    <% data5.questions.forEach(answer => { %>
                                    <option value="<%= answer.id %>"><%= answer.title %></option>
                                    <% }) %>
                                </select>

                                <label>Answer</label>
                                <input type="text" name="content" value="<%= locals.values?.content ?? ''%>" />
                              
                                <input type="submit" value="Submit" />
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
                <div class="panel team-players-panel">
                    <section class="long-player-container">
                        <ul>
                            <% data4.players.forEach(player => { %>
                                <li><%= player.name %></li>
                            <% }) %>
                        </ul>
                    </section>
                </div>
            </div>
        </section>
    </div>
</main>

<%- include('./partials/foot') %>
